---
import MainGridLayout from "../layouts/MainGridLayout.astro";
import BlogPost from "../components/BlogPost.astro";
const allPosts = await Astro.glob("../pages/posts/*.md");
---

<MainGridLayout>
  <p>这是我的 Astro 学习笔记</p>
  <ul>
    {
      allPosts.map((post) => (
        <BlogPost url={post.url} title={post.frontmatter.title} />
      ))
    }
  </ul>
</MainGridLayout>
